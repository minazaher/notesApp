<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_25sdp"
    android:background="@drawable/bg_search"
    android:backgroundTint="@color/colorSearchBackground"
    app:cardCornerRadius="@dimen/_10sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/colorSearchBackground"
            app:cardElevation="@dimen/_24sdp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:layout_gravity="center_vertical"
           android:gravity="center_vertical">

           <TextView
               android:id="@+id/tv_taskDayName"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="WED"
               android:fontFamily="@font/ubuntu_medium"
               android:textColor="@color/colorIcons"
               android:textSize="@dimen/_14ssp"
               android:layout_marginBottom="@dimen/_5sdp"
               android:layout_gravity="center"/>

           <TextView
               android:id="@+id/tv_taskDayNumber"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="09"
               android:fontFamily="@font/ubuntu_medium"
               android:textColor="@color/colorAccent"
               android:textSize="@dimen/_16ssp"
               android:layout_marginBottom="@dimen/_5sdp"
               android:layout_gravity="center"/>
           <TextView
               android:id="@+id/tv_taskMonth"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Dec"
               android:textSize="@dimen/_14ssp"
               android:textColor="@color/colorIcons"
               android:fontFamily="@font/ubuntu_medium"
               android:layout_gravity="center"/>
       </LinearLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="@dimen/_2sdp"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/_7sdp"
            android:background="@color/colorIcons"
            android:backgroundTint="@color/colorIcons"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_15sdp"
            android:layout_weight="5">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="vertical"
                android:paddingStart="@dimen/_10sdp">

                <TextView
                    android:id="@+id/tv_taskTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:text="Task Name"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/ubuntu_bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/tv_TaskDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:fontFamily="@font/ubuntu_regular"
                    android:text="Task Description"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorIcons"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/tv_taskDueHour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:baselineAligned="false"
                    android:text="08 : 45 "
                    android:fontFamily="@font/ubuntu_regular"
                    android:textColor="@color/colorIcons"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:src="@drawable/ic_done"
                    app:tint="@color/white"/>
                <TextView
                    android:id="@+id/tv_taskStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:textColor="@color/colorDelete"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_gravity="bottom"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/ubuntu_regular"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>